<Window x:Class="XMLViewerApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:XMLViewer="clr-namespace:XMLViewer;assembly=XMLViewer"
        mc:Ignorable="d"
        Height="600" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="MenuOpen_Click"/>
                <MenuItem Header="_Close" Click="MenuClose_Click"/>
                <Separator />
                <MenuItem Header="_Exit" Click="MenuExit_Click"/>
            </MenuItem>
        </Menu>

        <XMLViewer:Viewer x:Name="vXMLViwer" Grid.Row="1"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StatusBar >
                <StatusBarItem>
                    <TextBlock Name="textBlockFilePath" Grid.Column="0" HorizontalAlignment="Stretch"/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</Window>
